  "typography": {
    "heading": {
      "font": "SF Pro Display",
      "size": 28,
      "weight": "semibold"
    },
    "subheading": {
      "font": "SF Pro Display", 
      "size": 20,
      "weight": "medium"
    },
    "body": {
      "font": "SF Pro Text",
      "size": 17,
      "weight": "regular"
    },
    "caption": {
      "font": "SF Pro Text",
      "size": 13,
      "weight": "regular" 
    }
  },
  "spacing": {
