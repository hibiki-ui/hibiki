    "sm": {
      "offset": [0, 1],
      "blur": 3,
      "opacity": 0.1,
      "color": "#000000"
    },
    "md": {
      "offset": [0, 2],
      "blur": 6,
      "opacity": 0.15,
      "color": "#000000"
