  "version": "1.0.0",
  "appearance_mode": "auto",
  "colors": {
    "primary": {
      "light": "#0077BE", 
      "dark": "#4A9EFF"
    },
    "secondary": {
      "light": "#2E8B57",
      "dark": "#3CB371" 
    },
    "accent": {
      "light": "#1E90FF",
      "dark": "#00BFFF"
    },
    "success": {
      "light": "#20B2AA",
      "dark": "#40E0D0"
    },
    "warning": {
      "light": "#FFB347", 
      "dark": "#FFA500"
    },
    "error": {
      "light": "#DC143C",
      "dark": "#FF6B6B"
    },
    "background": {
      "light": "#F0F8FF",
      "dark": "#0F1419"
    },
    "surface": {
